{
  "workflowName": "CyberShield Data Analysis",
  "description": "KNIME workflow to analyze cybercrime data and generate charts for dashboard",
  "steps": [
    {
      "step": 1,
      "node": "File Reader",
      "type": "IO/Read",
      "configuration": {
        "url": "http://localhost:5500/cases.csv",
        "readHeader": true,
        "delimiter": ",",
        "encoding": "UTF-8"
      },
      "description": "Read CSV data from server endpoint"
    },
    {
      "step": 2,
      "node": "Column Filter",
      "type": "Manipulation/Column",
      "configuration": {
        "includeColumns": [
          "Case Number",
          "Crime Type",
          "Status",
          "Priority",
          "Platform",
          "Submitted At",
          "Incident Date"
        ]
      },
      "description": "Filter relevant columns for analysis"
    },
    {
      "step": 3,
      "node": "Missing Value",
      "type": "Manipulation/Row",
      "configuration": {
        "strategy": "Remove rows with missing values"
      },
      "description": "Handle missing data"
    },
    {
      "step": 4,
      "node": "GroupBy - Crime Type",
      "type": "Manipulation/Row",
      "configuration": {
        "groupBy": ["Crime Type"],
        "aggregation": {
          "operation": "Count",
          "column": "Case Number"
        }
      },
      "description": "Group data by crime type for distribution analysis"
    },
    {
      "step": 5,
      "node": "Bar Chart - Crime Type",
      "type": "Views/JavaScript",
      "configuration": {
        "xAxis": "Crime Type",
        "yAxis": "Count",
        "title": "Crime Type Distribution",
        "chartType": "bar"
      },
      "description": "Create bar chart showing crime type distribution"
    },
    {
      "step": 6,
      "node": "Image Writer - Crime Type",
      "type": "IO/Write",
      "configuration": {
        "outputFile": "knime_output/crime_type_distribution.png",
        "format": "PNG",
        "width": 800,
        "height": 600
      },
      "description": "Export crime type chart as PNG"
    },
    {
      "step": 7,
      "node": "GroupBy - Status",
      "type": "Manipulation/Row",
      "configuration": {
        "groupBy": ["Status"],
        "aggregation": {
          "operation": "Count",
          "column": "Case Number"
        }
      },
      "description": "Group data by status for status analysis"
    },
    {
      "step": 8,
      "node": "Pie Chart - Status",
      "type": "Views/JavaScript",
      "configuration": {
        "category": "Status",
        "value": "Count",
        "title": "Case Status Distribution",
        "chartType": "pie"
      },
      "description": "Create pie chart showing status distribution"
    },
    {
      "step": 9,
      "node": "Image Writer - Status",
      "type": "IO/Write",
      "configuration": {
        "outputFile": "knime_output/status_distribution.png",
        "format": "PNG",
        "width": 800,
        "height": 600
      },
      "description": "Export status chart as PNG"
    },
    {
      "step": 10,
      "node": "GroupBy - Priority",
      "type": "Manipulation/Row",
      "configuration": {
        "groupBy": ["Priority"],
        "aggregation": {
          "operation": "Count",
          "column": "Case Number"
        }
      },
      "description": "Group data by priority level"
    },
    {
      "step": 11,
      "node": "Bar Chart - Priority",
      "type": "Views/JavaScript",
      "configuration": {
        "xAxis": "Priority",
        "yAxis": "Count",
        "title": "Priority Level Distribution",
        "chartType": "bar",
        "colors": ["High: #ef4444", "Medium: #f59e0b", "Low: #10b981"]
      },
      "description": "Create bar chart showing priority distribution"
    },
    {
      "step": 12,
      "node": "Image Writer - Priority",
      "type": "IO/Write",
      "configuration": {
        "outputFile": "knime_output/priority_distribution.png",
        "format": "PNG",
        "width": 800,
        "height": 600
      },
      "description": "Export priority chart as PNG"
    },
    {
      "step": 13,
      "node": "GroupBy - Platform",
      "type": "Manipulation/Row",
      "configuration": {
        "groupBy": ["Platform"],
        "aggregation": {
          "operation": "Count",
          "column": "Case Number"
        },
        "sortBy": "Count",
        "sortOrder": "Descending",
        "limit": 10
      },
      "description": "Group by platform and get top 10"
    },
    {
      "step": 14,
      "node": "Bar Chart - Platform",
      "type": "Views/JavaScript",
      "configuration": {
        "xAxis": "Platform",
        "yAxis": "Count",
        "title": "Top 10 Platforms by Incident Count",
        "chartType": "bar",
        "orientation": "horizontal"
      },
      "description": "Create horizontal bar chart for platforms"
    },
    {
      "step": 15,
      "node": "Image Writer - Platform",
      "type": "IO/Write",
      "configuration": {
        "outputFile": "knime_output/platform_analysis.png",
        "format": "PNG",
        "width": 800,
        "height": 600
      },
      "description": "Export platform chart as PNG"
    }
  ],
  "outputDirectory": "knime_output",
  "notes": [
    "Ensure the knime_output directory exists before running the workflow",
    "The server must be running on http://localhost:5500",
    "Charts will automatically appear in the dashboard after execution",
    "Refresh the browser to see updated charts"
  ]
}

